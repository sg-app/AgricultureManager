@inherits FluxorComponent
<InsertButton InsertRow="InsertRow" />
<RadzenDataGrid @ref="_grid"
                Data="@SeedCategoryState.Value.SeedCategories"
                TItem="SeedCategoryVm"
                RowUpdate="@OnUpdateRow"
                RowCreate="@OnCreateRow"
                EmptyText="Keine Daten gefunden."
                Density="Density.Compact"
                EditMode="DataGridEditMode.Single">
    <Columns>
        <RadzenDataGridColumn TItem="SeedCategoryVm" Property="@(nameof(SeedCategoryVm.Name))" Title="Name">
            <EditTemplate Context="item">
                <DataAnnotationsValidator />
                <RadzenTextBox @bind-Value="item.Name" Style="width:100%" />
                <ValidationMessage For="@(()=>item.Name)" />
            </EditTemplate>
        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="SeedCategoryVm" Property="@(nameof(SeedCategoryVm.Comment))" Title="Kommentar">
            <EditTemplate Context="item">
                <RadzenTextBox @bind-Value="item.Comment" Style="width:100%" />
            </EditTemplate>
        </RadzenDataGridColumn>
        <RadzenDataGridInlineEditColumn TItem="SeedCategoryVm" DeleteRow="DeleteRow" EditRow="EditRow" CancelEditRow="CancelEditRow" SaveRow="SaveRow" />
    </Columns>
</RadzenDataGrid>