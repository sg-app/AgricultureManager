@inherits FluxorComponent
<InsertButton InsertRow="InsertRow" />
<RadzenDataGrid @ref="_grid"
                Data="@FieldState.Value.Fields"
                TItem="FieldVm"
                RowUpdate="@OnUpdateRow"
                RowCreate="@OnCreateRow"
                EmptyText="Keine Daten gefunden."
                Density="Density.Compact"
                EditMode="DataGridEditMode.Single">
    <Columns>
        <RadzenDataGridColumn TItem="FieldVm" Property="@(nameof(FieldVm.Number))" Title="Nummer" Width="120px">
            <EditTemplate Context="item">
                <DataAnnotationsValidator />
                <RadzenTextBox @bind-Value="item.Number" Style="width:100%" />
                <ValidationMessage For="@(()=>item.Number)" />
            </EditTemplate>
        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="FieldVm" Property="@(nameof(FieldVm.Name))" Title="Name">
            <EditTemplate Context="item">
                <RadzenTextBox @bind-Value="item.Name" Style="width:100%" />
                <ValidationMessage For="@(()=>item.Name)" />
            </EditTemplate>
        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="FieldVm" Property="@(nameof(FieldVm.Area))" Title="Fläche" Width="100px">
            <EditTemplate Context="item">
                <RadzenNumeric @bind-Value="item.Area" ShowUpDown="false" Style="width:100%" />
                <ValidationMessage For="@(()=>item.Area)" />
            </EditTemplate>
        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="FieldVm" Property="@(nameof(FieldVm.Comment))" Title="Kommentar">
            <EditTemplate Context="item">
                <RadzenTextBox @bind-Value="item.Comment" Style="width:100%" />
            </EditTemplate>
        </RadzenDataGridColumn>
        <RadzenDataGridInlineEditColumn TItem="FieldVm" DeleteRow="DeleteRow" EditRow="EditRow" CancelEditRow="CancelEditRow" SaveRow="SaveRow" />
    </Columns>
</RadzenDataGrid>